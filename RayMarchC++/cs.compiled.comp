vec3 refractRay(vec3 i, vec3 n, float ior){
    float cosi = clamp(dot(i, n), -1., 1.);
    float etai = 1.;
    float etat = ior;
    vec3 N = n;
    if(cosi < 0.){
        cosi = -cosi;
    }
    else{
        float temp = etai;
        etai = etat;
        etat = temp;
        N = -n;
    }
    float eta = etai / etat;
    float k = 1. - eta * eta * (1. - cosi * cosi);
    return k < 0 ? vec3(0.) : eta * i + (eta * cosi - sqrt(k)) * N;
}

vec3 reflectRay(vec3 i, vec3 n){
    return i - 2 * dot(i, n) * n;
}

