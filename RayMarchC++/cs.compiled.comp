    // distance of pt to closest object
    float dist = getDist(pt).distance;
    vec2 e = vec2(.01, 0);

    vec3 offset = dist - vec3(
        getDist(pt - e.xyy).distance,
        getDist(pt - e.yxy).distance,
        getDist(pt - e.yyx).distance);

    return normalize(offset);
}

